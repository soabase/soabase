{
  "server": {
    "applicationConnectors": [
      {
        "type": "http"
      }
    ],

    "adminConnectors": [
      {
        "type": "http"
      }
    ]
  },

  "logging": {
    "appenders": [
      {
        "type": "file",
        "currentLogFilename": "./logs/admin.log",
        "archivedLogFilenamePattern": "./logs/admin-%d.log.gz",
        "archivedFileCount": "5",
        "timeZone": "UTC"
      },

      {
        "type": "console",
        "threshold": "OFF"
      }
    ]
  }
}